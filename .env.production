# Production Environment Variables for Render
# These will be automatically set by render.yaml configuration

ENV=production
PORT=8080
LOG_LEVEL=info
LOG_FORMAT=json

# Database (will be auto-populated by Render from PostgreSQL service)
DATABASE_HOST=[auto-populated]
DATABASE_PORT=[auto-populated]
DATABASE_USER=[auto-populated]  
DATABASE_PASSWORD=[auto-populated]
DATABASE_NAME=[auto-populated]
DATABASE_SSLMODE=require

# JWT Configuration
JWT_SECRET=1234567890poiuytrewqasdfghjklmnbvcxz
JWT_EXPIRY=24h

# Security & Performance
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
BCRYPT_COST=12
CORS_ALLOWED_ORIGINS=*
