			"label": "Run Handlers Tests and Show Failures",
			"type": "shell",
			"command": "go test ./api/handlers -v | grep FAIL",
			"args": [],
			"isBackground": false,
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Run Specific Test",
			"type": "shell",
			"command": "go test ./api/handlers",
